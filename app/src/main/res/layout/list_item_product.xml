<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.example.kafiesta.domain.ProductDomaintest" />

        <variable
            name="onClickCallBack"
            type="com.example.kafiesta.utilities.helpers.RecyclerClick" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> onClickCallBack.onClick(model)}"
        android:padding="@dimen/padding_small">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="@color/gray"
            android:layout_marginStart="@dimen/margin_small"
            app:civ_border_width="1dp"
            imageUrl="@{model.imageURL}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_product_24" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{model.name}"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_semi_normal"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_semi_avg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_price"
            app:layout_constraintStart_toEndOf="@+id/image_view_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_avg"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{model.priceString}"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_normal"
            android:hint="10.0"
            app:layout_constraintBottom_toBottomOf="@id/image_view_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_view_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>