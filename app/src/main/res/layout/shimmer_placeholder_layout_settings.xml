<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_add_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_full_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_avg"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_avg"
        android:background="@color/shimmer_background"
        android:textSize="@dimen/text_size_semi_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle_add_product" />

    <TextView
        android:id="@+id/text_view_email"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/margin_min"
        android:layout_marginStart="@dimen/margin_avg"
        android:layout_marginEnd="@dimen/margin_avg"
        android:background="@color/shimmer_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_full_name" />

</androidx.constraintlayout.widget.ConstraintLayout>