<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/text_view_tab_item_img"
            android:layout_width="@dimen/norm_icon_size"
            android:layout_height="@dimen/norm_icon_size"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_tab_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_normal_small_light"
            android:fontFamily="@font/aileron_regular"
            app:layout_constraintEnd_toEndOf="@+id/text_view_tab_item_img"
            app:layout_constraintStart_toStartOf="@+id/text_view_tab_item_img"
            app:layout_constraintTop_toBottomOf="@+id/text_view_tab_item_img"
            app:textAllCaps="false"
            tools:text="@tools:sample/lorem" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>