<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppThemeMaterialComponents" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme.Theme.GreenForest" parent="AppThemeMaterialComponents">
        <item name="themeColorPrimary">@color/green_forest</item>
        <item name="themeColorPrimaryDark">@color/strong_green_forest</item>
        <item name="themeColorAccent">@color/gray</item>
        <item name="themeColorLightPrimary">@color/light_green_forest</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!--        https://stackoverflow.com/questions/30174042/how-to-switch-themes-night-mode-without-restarting-the-activity-->
    <!--        How to switch themes without restarting the activity-->
    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/stay</item>
        <item name="android:windowExitAnimation">@anim/stay</item>
    </style>

</resources>