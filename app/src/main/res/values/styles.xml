<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppThemeMaterialComponents" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme_Theme_ColorTheme" parent="AppThemeMaterialComponents">
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="themeColorAccent">@color/colorAccent</item>
        <item name="themeColorLightPrimary">@color/color_white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="UploadImageButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_semi_normal</item>
        <item name="android:background">@drawable/button_rectangle_round_50</item>
        <item name="android:fontFamily">@font/aileron_bold</item>
        <item name="android:layout_marginStart">@dimen/margin_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_big</item>
    </style>

    <style name="FrameLayoutSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_avg</item>
    </style>

    <style name="ButtonShopSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
        <item name="android:background">@drawable/layer_button_login</item>
        <item name="android:fontFamily">@font/aileron_regular</item>
    </style>

    <style name="EditShopHoursSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_avg</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/bg_white_bordered</item>
    </style>

    <style name="ButtonEditShopHoursSection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_normal_small</item>
        <item name="android:fontFamily">@font/aileron_regular</item>
    </style>

    <style name="EditShopDaysSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:padding">@dimen/margin_min</item>
        <item name="android:background">@drawable/bg_white_bordered</item>
    </style>

    <style name="CheckBoxShopDaysSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginTop">@dimen/margin_min</item>
        <item name="android:background">@drawable/bg_white_bordered</item>
    </style>

    <style name="FabTextAppearance" parent="AppTheme">
        <item name="android:background">@drawable/custom_background_fab</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/aileron_regular</item>
    </style>

</resources>