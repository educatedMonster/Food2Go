<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppThemeMaterialComponents" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme_Theme_ColorTheme" parent="AppThemeMaterialComponents">
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="themeColorAccent">@color/colorAccent</item>
        <item name="themeColorLightPrimary">@color/color_palette_white</item>
        <item name="themeColorLightOpacityPrimary">@color/color_palette_black</item>
        <item name="themeColorLightHeaderPrimary">@color/light_header_lemonade_main</item>
    </style>

    <style name="UploadImageButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_semi_normal</item>
        <item name="android:background">@drawable/button_rectangle_round_50</item>
        <item name="android:fontFamily">@font/aileron_bold</item>
        <item name="android:layout_marginStart">@dimen/margin_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_big</item>
    </style>

    <style name="FrameLayoutSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_avg</item>
    </style>

    <style name="ButtonShopSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_normal_plus</item>
        <item name="android:background">@drawable/layer_button_login_stroke</item>
        <item name="android:fontFamily">@font/aileron_regular</item>
    </style>

    <style name="EditShopHoursSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_avg</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/bg_white_bordered</item>
    </style>

    <style name="ButtonEditShopHoursSection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/layer_button_global_fill</item>
        <item name="android:textColor">@color/color_palette_black</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_normal_small</item>
        <item name="android:fontFamily">@font/aileron_regular</item>
        <item name="icon">@drawable/ic_open_time_24</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/color_palette_black</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="EditShopDaysSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:padding">@dimen/margin_min</item>
        <item name="android:background">@drawable/bg_white_bordered</item>
    </style>

    <style name="CheckBoxShopDaysSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/color_palette_black</item>
        <item name="android:layout_marginTop">@dimen/margin_min</item>
        <item name="android:background">@drawable/bg_white_bordered</item>
    </style>

    <style name="FabTextAppearance" parent="AppTheme">
        <item name="android:background">@drawable/custom_background_fab</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/aileron_regular</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="NoMarginsDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AutoCompleteInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layer_button_global_sub</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textColor">@color/color_palette_black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:minHeight">34dp</item>
        <item name="android:maxHeight">34dp</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/colorBlack</item>
        <item name="android:drawableEnd">@drawable/ic_dropdown_arrow</item>
    </style>

    <style name="RegisterButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_semi_normal</item>
        <item name="android:background">@drawable/layer_button_login_fill</item>
        <item name="android:fontFamily">@font/aileron_bold</item>
        <item name="android:layout_marginStart">@dimen/margin_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_big</item>
    </style>

    <style name="CustomProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/aileron_semibold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/color_palette_black</item>
        <item name="android:fontFamily">@font/aileron_semibold</item>
    </style>

    <!--  Date Picker Styles   -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_blue</item>           <!-- Header Background -->
        <item name="android:colorAccent">@color/color_blue</item>
        <item name="android:textColor">@color/color_blue</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:colorControlActivated">@color/color_url_link</item>        <!--selected day-->
        <!--        <item name="android:textColorPrimary">#89B5F6</item> &lt;!&ndash;days of the month&ndash;&gt;-->
        <!--        <item name="android:textColorSecondary">#0E3E85</item>    &lt;!&ndash;days of the week&ndash;&gt;-->
    </style>

    <!-- Date picker ok/cancel button styles    -->
    <style name="DialogButtonStyled" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/color_blue</item>
        <item name="android:background">@color/transparent_white_percent_0</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>